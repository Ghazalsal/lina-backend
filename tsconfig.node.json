{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src", // ✅ make sure your backend source lives in `src/`
    "types": ["node", "express"],
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src/server.ts"], // ✅ adjust if entry is different
  "exclude": ["node_modules"]
}
